<Window
    x:Class="Bubble.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Bubble"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   
    Title="MainWindow"
    Width="500"
    Height="500"
    mc:Ignorable="d"
    AllowsTransparency="True"
    Background="Transparent"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    WindowStyle="None">
    <Border CornerRadius="250"
            BorderThickness="5"
            BorderBrush="#FF7A7DF4">
        <Border.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FFA2C2F4"/>
                <GradientStop Color="#FF0E6AFC" Offset="1"/>
                <GradientStop Color="#FF598FE2" Offset="0.507"/>
            </RadialGradientBrush>
        </Border.Background>
        <Grid>
            <Button Content="X"
                    Height="25"
                    Name="buttonClose"
                    Width="25"
                    Click="buttonClose_Click" Margin="465,10,0,455"
                    />
        </Grid>


    </Border>


</Window>
